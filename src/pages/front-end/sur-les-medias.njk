{% extends "layouts/front-end/base.njk" %}

{% set bubble_color = "rouge" %}
{% set current_page = "/sur-les-medias" %}

{% block title %}Sur les médias{% endblock %}

{% block main %}

<h1 class="text-[1.5rem] lg:text-[2.1rem] font-bold mt-6 lg:mt-0 text-center lg:text-left px-4 lg:px-0">
    Les actualités et les événements importants du BUT et de l'IUT CY Paris Université dans les médias
</h1>

<ul class="grid grid-cols-1 md:grid-cols-2 gap-4 justify-center px-4 lg:px-0">
    <li class="m-4 text-center">
        <h2 class="text-[1.5rem] lg:text-[1.75rem] font-semibold">La nouvelle réforme : le BUT MMI</h2>
        <iframe class="h-[15rem] md:h-[20rem] w-full rounded-lg transition-all duration-300 hover:opacity-80 focus-visible:ring-2 focus-visible:ring-blue-500" 
            src="https://www.youtube.com/embed/oiEbQF7qfBU" 
            title="La nouvelle réforme : le BUT MMI" 
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen 
            aria-label="Vidéo YouTube expliquant la réforme du BUT MMI">
        </iframe>
    </li>
    <li class="m-4 text-center">
        <h2 class="text-[1.5rem] lg:text-[1.75rem] font-semibold">Pourquoi étudier à l'IUT CYU ?</h2>
        <iframe class="h-[15rem] md:h-[20rem] w-full rounded-lg transition-all duration-300 hover:opacity-80 focus-visible:ring-2 focus-visible:ring-blue-500" 
            src="https://www.youtube.com/embed/SyjF4h2Zb7Q" 
            title="Pourquoi étudier à l'IUT CYU ?" 
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen 
            aria-label="Vidéo expliquant pourquoi étudier à l'IUT CYU">
        </iframe>
    </li>
    <li class="m-4 text-center">
        <h2 class="text-[1.5rem] lg:text-[1.75rem] font-semibold">Job interview en anglais au département MMI</h2>
        <iframe class="h-[15rem] md:h-[20rem] w-full rounded-lg transition-all duration-300 hover:opacity-80 focus-visible:ring-2 focus-visible:ring-blue-500" 
            src="https://www.youtube.com/embed/t72pdxpNjyc" 
            title="Job interview en anglais au département MMI" 
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen 
            aria-label="Vidéo montrant une interview de travail en anglais au département MMI">
        </iframe>
    </li>
    <li class="m-4 text-center">
        <h2 class="text-[1.5rem] lg:text-[1.75rem] font-semibold">L'importance de l'IUT dans les études supérieures</h2>
        <iframe class="h-[15rem] md:h-[20rem] w-full rounded-lg transition-all duration-300 hover:opacity-80 focus-visible:ring-2 focus-visible:ring-blue-500" 
            src="https://www.youtube.com/embed/xD4wshE0hEg" 
            title="L'importance de l'IUT dans les études supérieures" 
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen 
            aria-label="Vidéo sur l'importance de l'IUT dans les études supérieures">
        </iframe>
    </li>
</ul>

{% endblock %}
