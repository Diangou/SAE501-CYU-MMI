<nav class="max-w-[1200px] mx-auto" role="navigation" aria-label="Menu principal">
    <ul data-navigation="front-end" 
        class="horizontal-scroll-shadow flex md:justify-end gap-x-10 overflow-x-auto sm:mr-0 mt-10 
               before:!-mt-0.5 before:!pt-0 after:!-mt-0.5 after:!pt-0">
        {% for menu_item in menu %}
            <li class="
                {% if loop.first %}supports-[animation-timeline]:-ml-9{% endif %}
                {% if loop.last %}supports-[animation-timeline]:-mr-9{% endif %}
            ">
                <a class="block whitespace-nowrap text-lg hocus:text-pink-600 
                    {% if menu_item.link == current_page %}text-pink-600 font-bold{% endif %}" 
                   href="{{ menu_item.link }}">
                    {{ menu_item.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
</nav>
